<html>
  <head></head>

<body>
    <title>Follower Users</title>
    <main>  
<% if @users.exists? %>
  <% @users.each do |user| %>
    <table>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr><td><% if user.profile_image? %>
             <%= image_tag user.profile_image.url %>
             <% else %>
             <%= image_tag ("default-image.jpg"), size: "50x50" %>
             <% end %></td>
          <td><%= user.name %></td>
          <td>フォロー数: <%= user.followings.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td>
          <td> <%= link_to 'Show', user_path(user.id) %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
  </main>
 </body>   
</html>